@model User


@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "_Layout_login";
}
<div class="container">
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5" <div class="card mt-5" style="border-radius: 15px; border: 1px solid #000;">

                <div class="card-header">
                    <h4>Registrazione</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Inserisci Nome"/>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cognome"></label>
                            <input asp-for="Cognome" class="form-control"placeholder="Inserisci Cogome" />
                            <span asp-validation-for="Cognome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">E-mail</label>
                            <input asp-for="Email" class="form-control" placeholder="Inserisci E-mail" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordBase64">Password</label>
                            <input asp-for="PasswordBase64" type="password" class="form-control"placeholder="Inserisci Pasword" />
                            <span asp-validation-for="PasswordBase64" class="text-danger"></span>
                        </div>
                        <br />
                         <div class="row">
                             <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary">Registrati</button>
                            </div>
                            <div class="col-sm-2">
                                <a  asp-controller="Auth" asp-action="Login" class="btn btn-danger">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>