@model gestione_ticket_final.Models.User
@{
    ViewData["Title"] = "Details";
}

<h1>Dettaglio Utente</h1>

<div>
   
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card text-white border-secondary" style="border-radius: 20px;">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2" style="color:black;">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10" style="color:black;">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2" style="color:black;">
                            @Html.DisplayNameFor(model => model.Cognome)
                        </dt>
                        <dd class="col-sm-10" style="color:black;">
                            @Html.DisplayFor(model => model.Cognome)
                        </dd>
                        <dt class="col-sm-2" style="color:black;">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10" style="color:black;">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2" style="color:black;">
                            @Html.DisplayNameFor(model => model.Ruolo)
                        </dt>
                        <dd class="col-sm-10" style="color:black;">
                            @Html.DisplayFor(model => model.Ruolo)
                        </dd>
                    </dl>
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a> 
                </div>
            </div>
        </div>
    </div>

</div>

