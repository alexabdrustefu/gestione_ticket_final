@model gestione_ticket_final.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica di un utente</h1>

<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card text-white border-secondary" style="border-radius: 20px;">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Inserisci Nome" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cognome" class="control-label">Cognome</label>
                        <input asp-for="Cognome" class="form-control" placeholder="Inserisci Cognome" />
                        <span asp-validation-for="Cognome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" placeholder="E-mail" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ruolo" class="control-label">Ruolo</label>
                        <select asp-for="Ruolo" class="form-control">
                            @foreach (var enumValue in Enum.GetValues(typeof(Ruolo)))
                            {
                                <option value="@enumValue">@enumValue</option>
                            }
                        </select>
                        <span asp-validation-for="Ruolo" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-danger" asp-action="Index">Back</a>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
